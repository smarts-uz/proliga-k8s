helm repo add jetstack https://charts.jetstack.io
helm repo update

helm install cert-manager jetstack/cert-manager \
  --namespace cert-manager \
  --create-namespace \
  --version v1.15.0



# Certificate holati
kubectl describe certificate ssl.smarts.uz-tls -n test-nginx

# TLS secret mavjudligini tekshirish
kubectl get secret ssl.smarts.uz-tls -n test-nginx

# Ingress holati
kubectl describe ingress komol-ingress -n test-nginx
